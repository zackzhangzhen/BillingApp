<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bufferfly"
        android:fadingEdge="horizontal|vertical"
        android:fadingEdgeLength="30dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/gallery1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_launcher" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:text="Lingo屌丝团大乱斗"
            android:textSize="30dp" />

      <Button
            android:id="@+id/button6"
           	android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="测试" />
        
        <Button
            android:id="@+id/reckonBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="屌丝算钱" />

        <Button
            android:id="@+id/editMember"
            android:layout_width="200dp"
            android:layout_height="wrap_content" 
            android:layout_gravity="center_horizontal"	
            android:layout_marginTop="30dp"
            android:text="编辑会员" />
        
        <Button
            android:id="@+id/editTurnout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="会员活动登记" />

        <Button
            android:id="@+id/editAcct"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="编辑账户" />

        <Button
            android:id="@+id/depositReminderBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="充值提醒查询" />
        
        <Button
            android:id="@+id/rankingBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="屌丝度计算" />
        
        <Button
            android:id="@+id/backupBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="备份数据" />
        
        <Button
            android:id="@+id/restoreBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="恢复数据" />
    </LinearLayout>

</ScrollView>
